<form action="/category/delete" method="post">
<h1>List Category</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each categories}}
        <tr>
            <td>{{name}}</td>
            <td><a href="category/delete?id={{_id}}" onclick="return confirm('Are you sure?')">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</form>